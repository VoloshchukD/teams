<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">

    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>

    <jsp-config>
        <taglib>
            <taglib-uri>custom-tags</taglib-uri>
            <taglib-location>/WEB-INF/tld/custom.tld</taglib-location>
        </taglib>
    </jsp-config>

    <listener>
        <listener-class>by.voloshchuk.servlet.listener.WebAppListener</listener-class>
    </listener>

    <error-page>
        <exception-type>java.lang.Throwable</exception-type>
        <location>/jsp/error.jsp</location>
    </error-page>

    <servlet>
        <servlet-name>Controller</servlet-name>
        <servlet-class>by.voloshchuk.servlet.Controller</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Controller</servlet-name>
        <url-pattern>/controller</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>AsyncController</servlet-name>
        <servlet-class>by.voloshchuk.servlet.AsyncController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AsyncController</servlet-name>
        <url-pattern>/async-controller</url-pattern>
    </servlet-mapping>

</web-app>